---
const { url } = Astro;
const id = new URL(url).searchParams.get("id") ?? "";

// Valideer aanwezigheid van `id`
if (!id) {
  // Geen ID: we tonen straks een melding
} 

// Probeer server-side de beschrijving op te halen
let description: string | null = null;
if (id) {
  try {
    const res = await fetch(`/.netlify/functions/space?id=${id}`);
    if (res.ok) {
      const json = await res.json();
      description = json.description ?? "(geen beschrijving)";
    } else {
      description = `(API-fout: ${res.status})`;
    }
  } catch (e) {
    description = "(fout bij ophalen)";
  }
}
---
<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ruimtebeschrijving</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        max-width: 500px;
        margin: 2rem auto;
        padding: 1rem;
        background: #f7f7f7;
        color: #333;
      }
      h1 {
        text-align: center;
        color: #f07c10;
      }
      .info {
        background: #fff;
        padding: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-top: 1rem;
        font-size: 1.1rem;
      }
      .error {
        color: #721c24;
        background: #f8d7da;
        padding: 1rem;
        border-radius: 4px;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <h1>Ruimtebeschrijving</h1>

    { !id ? (
      <div class="error">⚠️ Geen ruimte-ID opgegeven in de URL.</div>
    ) : (
      <div class="info">
        <strong>Space ID:</strong> {id}<br />
        <strong>Beschrijving:</strong> {description}
      </div>
    ) }
  </body>
</html>
