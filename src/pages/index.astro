---
const params = new URLSearchParams(Astro.request.url);
const spaceId = params.get('id') ?? '';
---

<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>QR Atalian</title>
</head>
<body>
  <h1>Meld een storing</h1>

  <form id="meldingForm">
    <div>
      <label for="ruimteBeschrijving">Ruimtebeschrijving</label><br />
      <input type="text" id="ruimteBeschrijving" name="ruimteBeschrijving" readonly />
    </div>

    <div>
      <label for="email">Uw e-mailadres</label><br />
      <input type="email" id="email" name="email" required />
    </div>

    <div>
      <label for="beschrijving">Probleembeschrijving</label><br />
      <textarea id="beschrijving" name="beschrijving" rows="4" required></textarea>
    </div>

    <input type="hidden" id="spaceId" name="spaceId" value={spaceId} />

    <button type="submit">Verstuur melding</button>
  </form>

  <script>
    (async () => {
      const spaceId = document.getElementById('spaceId').value;

      if (spaceId) {
        try {
          const response = await fetch(`/.netlify/functions/Space?spaceId=${spaceId}`);
          const data = await response.json();
          document.getElementById('ruimteBeschrijving').value = data.description?.trim() || '(geen beschrijving)';
        } catch (err) {
          document.getElementById('ruimteBeschrijving').value = '(fout bij ophalen)';
        }
      }

      document.getElementById('meldingForm').addEventListener('submit', async e => {
        e.preventDefault();
        const form = e.target;

        const payload = {
          JobDescr: form.beschrijving.value,
          ReportText: form.email.value,
          SpaceId: form.spaceId.value,
          Provider: "QRConnect",
          ExternalId: "",
          PriorityId: "",
          ServiceDeskReportTypeId: "601"
        };

        const res = await fetch('/.netlify/functions/melding', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        if (res.ok) {
          alert('Melding succesvol verzonden!');
          form.reset();
        } else {
          alert('Er ging iets mis bij het verzenden.');
        }
      });
    })();
  </script>
</body>
</html>
